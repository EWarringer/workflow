  <% if @results.nil? %>
    <div class="background_img"></div>
  <% else %>
    <div class="background_img_new">

    </div>

    <div class="main">
      <div class="container tim-container" style="max-width:800px;">
          <h1 class="text-center">Job Results<small class="subtitle"><%= @search %></small></h1>
          <%= @results.each do |job| %>
            <div class="container">
              <ul class="job_block">
                <li><%= job.company %></li>
                <li><%= job.date %></li>
                <li><%= job.expired %></li>
                <li><%= job.formatted_location %></li>
                <li><%= job.formatted_relative_time %></li>
                <li><%= job.job_title %></li>
                <li><%= job.snippet %></li>
                <li><%= job.source %></li>
                <li><%= link_to "see job", job.url %></li>
              </ul>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>
